{% extends 'base.html.twig' %}

{% block title %}Список групповых занятий{% endblock %}

{% block body %}
    <div class="row">
        {% for groupFitnessClass in groupFitnessClasses %}
            <div class="col-sm-6">
                <a href="{{ path('class_detail', {id: groupFitnessClass.id}) }}" class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ groupFitnessClass.name }}</h5>
                        <p class="card-text">{{ groupFitnessClass.couchName }}</p>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
