<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} Фитнес-клуб {% endblock %}</title>

        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,500,500i,600,600i&display=swap" rel="stylesheet" />
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <header class="mb-4">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('class_list') }}">Фитнес-клуб</a>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="{{ path('class_list') }}">Список групповых занятий</a>
                    </li>
                    {% if app.user %}
                        {% if app.user.isAdmin %}
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="{{ path('admin') }}">Админка</a>
                            </li>
                        {% endif %}

                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="{{ path('profile') }}">{{ app.user.fullName }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="{{ path('app_logout') }}">Выйти</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="{{ path('app_login') }}">Войти</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>
    </header>
    <body>
        <div class="container">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
